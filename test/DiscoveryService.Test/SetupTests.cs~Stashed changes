using LUC.DiscoveryService.Test.Factories;
using LUC.Interfaces;
using LUC.Services.Implementation;
using NUnit.Framework;

namespace LUC.DiscoveryService.Test
{
    [SetUpFixture]
    static class SetupTests
    {
        internal static ILoggingService LoggingService { get; private set; }

        public static DiscoveryService DiscoveryService { get; private set; }

        [OneTimeSetUp]
        public static void AssemblyInitialize()
        {
            //set logger factory
            LoggingService = new LoggingService
            {
                SettingsService = new SettingsService()
            };

            DiscoveryService = DiscoveryServiceFactory.DefaultInitialized();
        }

        [OneTimeTearDown]
        public static void AssemblyCleanup()
        {
            DiscoveryService?.Stop();
        }
    }
}
